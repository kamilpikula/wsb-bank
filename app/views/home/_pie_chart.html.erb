<div class="card">
  <div class="card-header">
    <h4>Liczba transakcji razem</h4>
  </div>
  <div class="card-body">
    <% series = [
      {name: "Przelewy", data: AccountTransaction.where(transaction_type: "przelew", bank_account_id: current_user.id).count},
      {name: "Wpłaty", data: AccountTransaction.where(transaction_type: "wpłata", bank_account_id: current_user.id).count},
      {name: "Wypłaty", data: AccountTransaction.where(transaction_type: "wypłata", bank_account_id: current_user.id).count}]
    %> 
    <% options = {
                  theme: 'palette8'
    } %>
    <%= pie_chart(series, options) %>
  </div>
  </div>