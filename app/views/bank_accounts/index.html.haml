%h1 Konta bankowe

= link_to new_bank_account_path do
  Nowe konto bankowe

%table.table.table-bordered
  %thead
    %tr
      %th Numer konta
      %th Klient
      %th Kwota
      %th Akcja
  %tbody
    - @bank_accounts.each do |bank_account|
      %tr
        %td #{bank_account.account_number}
        %td 
          = link_to client_path(bank_account.client.id) do
            #{bank_account.client}
        %td #{number_to_currency(bank_account.balance, unit: "PLN")}
        %td
          = link_to bank_account_path(bank_account.id), class: "btn btn-primary" do
            Poka≈º