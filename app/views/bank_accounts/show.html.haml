.section-header
  %h1 Przelewy
.section-body
  .row
    .col-12
      .card
        .card-header
          %h4.card-title Twój numer konta: #{@bank_account.account_number}
        .card-body
          = button_tag :new_transaction, id: "btn-new-transaction", class: "mb-4 btn btn-primary" do
            Nowa transakcja
          = link_to root_path, class: "ml-4 mb-4 btn btn-light" do
            Powrót

          = render partial: "transactions", locals: { bank_account: @bank_account}

= render partial: "modal_transaction"

#parameters{data: {bank_account_id: @bank_account.id }}