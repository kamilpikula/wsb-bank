%h1 Numer konta: #{@bank_account.account_number}
%small #{@bank_account.client}

= button_tag :new_transaction, id: "btn-new-transaction", class: "btn btn-primary" do
  Nowa transakcja

%table.table.table-bordered
  %thead
    %tr
      %th Data transakcji
      %th Typ transakcji
      %th Kwota
  %tbody
    - @bank_account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}
        %td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "PLN")}
    
    %tr
      %th
      %th Bilans
      %th #{number_to_currency(@bank_account.balance, unit: "PLN")}


#modal-transaction.modal{tabindex:'-1', role:'dialog'}
  .modal-dialog{role:'document'}
    .modal-content
      .modal-header
        %h5.modal-title Nowa trasakcja
        %button.close{type:'button', data:{dismiss:'modal'}}
          %span{aria:{hidden:'true'}} &times;
      
      .modal-body
        .row
          .col-md-6
            %label Kwota
            = text_field_tag :amount, 0.00, id: "input-amount", class: "form-control"
          .col-md-6
            %label Typ transakcji
            = select_tag :transaction_type, options_for_select(AccountTransaction::TRANSACTION_TYPES), id: "select-transaction-type", class: "form-control"
      .modal-footer
        %button.btn.btn-secondary{type:'button', data:{dismiss:'modal'}} Zamknij
        %button#btn-transaction-save.btn.btn-primary{type:'button'} Zapisz