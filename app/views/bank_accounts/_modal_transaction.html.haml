#modal-transaction.modal{tabindex:'-1', role:'dialog'}
  .modal-dialog{role:'document'}
    .modal-content
      .modal-header
        %h5.modal-title Nowa transakcja
        %button.close{type:'button', data:{dismiss:'modal'}}
          %span{aria:{hidden:'true'}} &times;
      
      .modal-body
        .row
          .col-md-12
            .notification
        .row
          .col-md-6
            %label Kwota
            = text_field_tag :amount, 0.00, placeholder: "0.00", id: "input-amount", class: "form-control"
          .col-md-6
            %label Typ transakcji
            = select_tag :transaction_type, options_for_select(AccountTransaction::TRANSACTION_TYPES), id: "select-transaction-type", class: "form-control"
          .col-md-12.transfer.d-none
            %br
            %label Numer konta
            = text_field_tag :account_number, nil, placeholder: 'Wklej numer konta', id: "transfer_account_number", class: "form-control"
            %p
              %small.text-muted.name_bank
      .modal-footer
        %button.btn.btn-secondary{type:'button', data:{dismiss:'modal'}} Zamknij
        %button#btn-transaction-save.btn.btn-primary{type:'button'} Zapisz