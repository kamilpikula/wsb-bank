<div id="app">
  <section class="section">
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
          <div class="card card-primary">
            <div class="card-header"><h4>Logowanie do systemu</h4></div>
            <div class="card-body">
              <%= simple_form_for(resource, 
                                  as: resource_name, 
                                  url: session_path(resource_name), 
                                  html: { class: "needs-validation"}) do |f| %>
                <div class="form-group">
                  <%= f.input :login,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "login",
                                            class: "form-control",
                                            tabindex: "1"
                                            } %>
                  <div class="invalid-feedback">
                    Niepoprawny adres email! 
                  </div>
                </div>
                <div class="form-group">
                  <div class="d-block">
                    <div class="float-right">
                      <a href="<%= new_password_path(resource_name) %>" class="text-small">
                        Zapomniałeś hasła?
                      </a>
                    </div>
                  </div>
                  <%= f.input :password,
                              required: true,
                              input_html: { autocomplete: "current-password", 
                                            class: "form-control",
                                            tabindex: "2" } %>
                </div>
              </div>

                <div class="form-group">
                  <%= f.button :submit, "Zaloguj się", class: "btn btn-primary btn-lg btn-block", tabindex: "4" %>
                </div>
              <% end %>
            </div>
            <div class="mt-5 text-muted text-center">
              Nie masz konta? <a href="<%= new_registration_path(resource_name) %>">Zarejestruj się</a>
            </div>
            <div class="simple-footer">
              <%= render partial: "shared/footer" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>