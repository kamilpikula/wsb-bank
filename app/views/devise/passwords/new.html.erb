<div id="app">
  <section class="section">
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
          <div class="card card-primary">
            <div class="card-header"><h4>Przypomnienie hasła</h4></div>
            <div class="card-body">
              <%= simple_form_for(resource, 
                                  as: resource_name, 
                                  url: session_path(resource_name), 
                                  html: { class: "needs-validation"}) do |f| %>
                <div class="form-group">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email", class: "form-control" } %>
                  <div class="invalid-feedback">
                    Niepoprawny adres email! 
                  </div>
                </div>
              </div>
                <div class="form-group">
                  <%= f.button :submit, "Przypomnij hasło", class: "btn btn-primary btn-lg btn-block" %>
                </div>
              <% end %>
            </div>
            <div class="mt-5 text-muted text-center">
              Nie masz konta? <a href="<%= new_registration_path(resource_name) %>">Zarejestruj się</a>
            </div>
            <div class="mt-5 text-muted text-center">
              Posiadasz konto? <a href="<%= new_session_path(resource_name) %>">Logowanie do systemu</a>
            </div>
            <div class="simple-footer">
              <%= render partial: "shared/footer" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>